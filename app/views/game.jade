doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    title CodeDay: Loteria
    script(src='static/js/jquery-latest.min.js')
    script(src='static/js/materialize.min.js')
    link(href='static/css/materialize.min.css', rel='stylesheet')
    link(href='static/css/game.css', rel='stylesheet')
    - var isHost = false;
    - if(username === hostName) { isHost = true; }
  body
    .row
      .col.s3.scoreboard
        .card-panel.white
          h3(id='roomName') #{roomName}
          p
            | A Loter√≠a game by 
            span.bold #{hostName}
            | , currently in this game as 
            span.bold #{username}
            | .
            if isHost
                h5 Host tools
                a.waves-effect.waves-light.btn.yellow.black-text(id='host_close_room') Close room
        .card-panel.white
          h5 Scoreboard
          .players
            ol
                each item in scoreboard
                    li= item
        .card-panel.white
          h5 New to Loteria?
          p
            | Check out the 
            a(href='/help', target='_blank') help page
            | .
          p
            a(href='/') Click to go back to the homepage
